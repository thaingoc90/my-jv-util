<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<bean id="saltGenerator" class="ind.web.nhp.encrypt.salt.UserEmailSaltGenerator"
		scope="singleton" />

	<bean id="passwordEncoder" class="ind.web.nhp.encrypt.encoder.Md5PasswordEncoder"
		scope="singleton" />

	<bean id="authenticationAgent" class="ind.web.nhp.us.SimpleAuthenticationAgent"
		scope="singleton">
		<property name="saltGenerator" ref="saltGenerator" />
		<property name="passwordEncoder" ref="passwordEncoder" />
	</bean>

	<bean id="userManager" class="ind.web.nhp.us.impl.JdbcUsManager"
		scope="singleton" init-method="init" destroy-method="destroy">

		<property name="sqlPropsLocation" value="/ind/web/nhp/us/impl/user-manger.sql.xml" />
		<property name="driver">
			<value><![CDATA[com.mysql.jdbc.Driver]]></value>
		</property>
		<property name="connUrl">
			<value><![CDATA[jdbc:mysql://127.0.0.1:3306/nhp?useUnicode=true&amp;characterEncoding=utf-8]]></value>
		</property>
		<property name="username">
			<value>root</value>
		</property>
		<property name="password">
			<value>root</value>
		</property>
		<property name="cacheManager" ref="cacheManager" />
	</bean>


	<bean id="pcManager" class="ind.web.nhp.base.manager.PaperclipManager"
		scope="singleton" init-method="init" destroy-method="destroy">

		<property name="sqlPropsLocation"
			value="/ind/web/nhp/base/manager/paperclip-manager.sql.xml" />
		<property name="driver">
			<value><![CDATA[com.mysql.jdbc.Driver]]></value>
		</property>
		<property name="connUrl">
			<value><![CDATA[jdbc:mysql://127.0.0.1:3306/nhp?useUnicode=true&amp;characterEncoding=utf-8]]></value>
		</property>
		<property name="username">
			<value>root</value>
		</property>
		<property name="password">
			<value>root</value>
		</property>
		<property name="cacheManager" ref="cacheManager" />
	</bean>

	<bean id="configManager" class="ind.web.nhp.base.manager.ConfigManager"
		scope="singleton" init-method="init" destroy-method="destroy">

		<property name="sqlPropsLocation"
			value="/ind/web/nhp/base/manager/config-manager.sql.xml" />
		<property name="driver">
			<value><![CDATA[com.mysql.jdbc.Driver]]></value>
		</property>
		<property name="connUrl">
			<value><![CDATA[jdbc:mysql://127.0.0.1:3306/nhp?useUnicode=true&amp;characterEncoding=utf-8]]></value>
		</property>
		<property name="username">
			<value>root</value>
		</property>
		<property name="password">
			<value>root</value>
		</property>
		<property name="cacheManager" ref="cacheManager" />
	</bean>

</beans>